{
  "name": "zupi",
  "version": "1.0.0",
  "description": "A NodeJS/Express API",
  "author": "Cleiton Pereira <cleiton.spereira@live.com>",
  "license": "MIT",
  "private": true,
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage",
    "lint:check": "eslint {tests,src,lib}/**/*.js",
    "lint:staged": "lint-staged",
    "lint:write": "npm run lint:check -- --fix"
  },
  "jest": {
    "testEnvironment": "./tests/environment.js",
    "globalTeardown": "./tests/teardown.js"
  },
  "lint-staged": {
    "*.js": "npm run lint:check",
    "tests/**/*.spec.js": "npm run test -- -b -o --findRelatedTests"
  },
  "pre-commit": [
    "lint:staged"
  ],
  "dependencies": {
    "app-root-path": "^2.1.0",
    "body-parser": "^1.18.3",
    "dotenv-safe": "^6.1.0",
    "express": "^4.16.3",
    "express-boom": "^2.0.0",
    "express-jwt": "^5.3.1",
    "express-jwt-blacklist": "^1.1.0",
    "express-unless": "^0.5.0",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.3.4",
    "mongoose-bcrypt": "^1.6.0",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-jest": "^21.25.1",
    "eslint-plugin-prettier": "^3.0.0",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "mongodb-memory-server": "^2.2.0",
    "node-mocks-http": "^1.7.0",
    "nodemon": "^1.18.4",
    "pre-commit": "^1.2.2",
    "prettier": "^1.14.3",
    "superagent-defaults": "^0.1.14",
    "supertest": "^3.3.0"
  }
}
